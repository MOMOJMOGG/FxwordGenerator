<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto quote-title">
      <h1 class="text-center text-light font-weight-bold">你想對誰說幹話?</h1>
    </div>

    <form method="POST" action="/" class="col-12 col-lg-10 col-xl-8 mx-auto mt-3">
      <div class="cards d-flex justify-content-between">
        <div class="card col-3 p-0 mx-1">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
            class="engineer-img" style="width:100%;height:180px" alt="Option-Image">
          <div class="card-body text-center">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="target" id="engineer-option" value="engineer" required
                {{#is target 'engineer' }} checked {{/is}}>
              <label class="form-check-label  font-weight-bold" for="engineer-option">
                <h4 class="font-weight-bold">工程師</h4>
              </label>
            </div>
          </div>
        </div>
        <div class="card col-3 p-0 mx-1">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
            class="designer-img rounded" style="width:100%;height:180px" alt="Option-Image">
          <div class="card-body text-center">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="target" id="designer-option" value="designer" required
                {{#is target 'designer' }} checked {{/is}}>
              <label class="form-check-label" for="designer-option">
                <h4 class="font-weight-bold">設計師</h4>
              </label>
            </div>
          </div>
        </div>
        <div class="card col-3 p-0 mx-1">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
            class="entrepreneur-img rounded" style="width:100%;height:180px" alt="Option-Image">
          <div class="card-body text-center">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="target" id="entrepreneur-option" value="entrepreneur"
                required {{#is target 'entrepreneur' }} checked {{/is}}>
              <label class="form-check-label font-weight-bold" for="entrepreneur-option">
                <h4 class="font-weight-bold">創業家</h4>
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="generate-group d-flex justify-content-between mt-5">
        <div class="form-group form-row col-2 mx-1 p-0">
          <button class="btn btn-primary" style="width: 100%; height: 40px" type="submit">產生幹話</button>
        </div>
        <div class="col-9 mx-1 p-0">
          <textarea name="genFxword" id="generated-fxword" rows="3" style="width: 90%; height: 80px"
            readonly="readonly">{{ result }}</textarea>
        </div>
      </div>
    </form>
  </div>
</div>